# API Configuration
# Base URL for the API endpoints
VITE_API_BASE_URL=https://starterjam.com/api

# WebSocket base URL for real-time connections
VITE_WS_BASE_URL=wss://starterjam.com/ws

# Application Configuration
# Name of the application (used for branding)
VITE_APP_NAME=StarterJam

# The URL of the GitHub repository for the project
VITE_GITHUB_REPO=https://github.com/nicholasgriffintn/starterjam.com

# Environment identifier (development, staging, production)
VITE_ENVIRONMENT=production

# WebSocket Configuration
# Maximum number of reconnection attempts before giving up
VITE_MAX_RECONNECT_ATTEMPTS=5

# Base delay in milliseconds between reconnection attempts
VITE_RECONNECT_BASE_DELAY=1000

# Maximum delay in milliseconds between reconnection attempts
VITE_MAX_RECONNECT_DELAY=30000

# API Server Configuration (Cloudflare Workers)
# These variables are set in wrangler.jsonc for Cloudflare Workers deployment

# Application Configuration
# APP_NAME=StarterJam API
# ENVIRONMENT=production
# APP_VERSION=1.0.0

# Room Configuration
# ROOM_KEY_LENGTH=6
# MAX_USERS_PER_ROOM=20
# ROOM_TIMEOUT_MINUTES=60
# MAX_ROOMS_PER_IP=5

# Security Configuration
# CORS_ORIGINS=*
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=60000
# JWT_SECRET=your-secret-key-here

# WebSocket Configuration (Server-side)
# WS_HEARTBEAT_INTERVAL=30000
# WS_CONNECTION_TIMEOUT=60000
# MAX_CONNECTIONS_PER_ROOM=50

# API Internal Configuration
# API_DUMMY_BASE_URL=https://internal